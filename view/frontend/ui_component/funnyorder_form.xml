<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">funnyorder_form.funnyorder_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Funny fields</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <namespace>funnyorder_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>funnyorder_form.funnyorder_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="funnyorder_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <dataProvider class="Vaimo\Mytest\DataProvider\Frontend\CustomerDataProvider" name="funnyorder_form_data_source">
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label>Order</label>
        </settings>
        <field name="hello" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">funnyorder</item>
                    <item name="disabled" xsi:type="boolean">true</item>
                </item>
            </argument>
        </field>
        <field name="fun_start">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Event start</item>
                    <item name="require" xsi:type="boolean">true</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="source" xsi:type="string">funnyorder</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="dataScope" xsi:type="string">fun_start</item>
                    <item name="options" xsi:type="array">
                        <item name="showsTime" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="fun_end">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Event finish</item>
                    <item name="require" xsi:type="boolean">true</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="source" xsi:type="string">funnyorder</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="dataScope" xsi:type="string">fun_end</item>
                    <item name="options" xsi:type="array">
                        <item name="showsTime" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="phone" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">funnyorder</item>
                    <item name="require" xsi:type="boolean">true</item>
                </item>
            </argument>
            <settings>
                <label>Phone</label>
                <visible>true</visible>
                <dataScope>phone</dataScope>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="wish" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">funnyorder</item>
                    <item name="require" xsi:type="boolean">true</item>
                </item>
            </argument>
            <settings>
                <label>Wish</label>
                <visible>true</visible>
                <dataScope>wish</dataScope>
            </settings>
        </field>
        <field name="mybutton" >
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Vaimo_Mytest/js/button</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="formElement" xsi:type="string">button</item>
                    <item name="title" xsi:type="string">Send</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
